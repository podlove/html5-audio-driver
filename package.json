{
  "name": "@podlove/html5-audio-driver",
  "version": "1.4.9",
  "description": "Pure html5 audio driver",
  "author": "Alexander Heimbuch <github@heimbu.ch>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./actions": {
      "import": "./dist/actions.js"
    },
    "./audio": {
      "import": "./dist/audio.js"
    },
    "./connect": {
      "import": "./dist/connect.js"
    },
    "./events": {
      "import": "./dist/events.js"
    },
    "./filters": {
      "import": "./dist/filters.js"
    },
    "./hls": {
      "import": "./dist/hls.js"
    },
    "./media": {
      "import": "./dist/media.js"
    },
    "./props": {
      "import": "./dist/props.js"
    },
    "./utils": {
      "import": "./dist/utils.js"
    },
    "./video": {
      "import": "./dist/video.js"
    }
  },
  "scripts": {
    "start": "vite serve",
    "clean": "rm -rf dist/* && mkdir -p dist/",
    "build": "vite build",
    "test": "cypress run --browser chrome",
    "test:dev": "cypress open --browser chrome",
    "release": "release-it",
    "prepare": "husky install",
    "format": "prettier -w {src,cypress}/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/podlove/html5-audio-driver.git"
  },
  "dependencies": {
    "hls.js": "1.2.8",
    "ramda": "0.28.0"
  },
  "devDependencies": {
    "cypress": "12.0.1",
    "milligram": "1.4.0",
    "normalize.css": "8.0.1",
    "release-it": "15.5.1",
    "typescript": "4.9.3",
    "vite": "3.2.5",
    "vitest": "0.25.5",
    "prettier": "2.8.1",
    "pretty-quick": "3.1.3",
    "husky": "8.0.0",
    "@types/ramda": "0.28.20",
    "@types/hls.js": "1.0.0",
    "vite-plugin-dts": "1.7.1",
    "rollup-plugin-delete": "2.0.0"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm test"
      ],
      "after:bump": [
        "npm run build"
      ]
    },
    "npm": {
      "publishPath": "./dist"
    },
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
